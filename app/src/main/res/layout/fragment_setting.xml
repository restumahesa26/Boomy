<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    tools:context=".ui.music.MusicFragment">

    <TextView
        android:layout_marginBottom="24dp"
        android:text="Setting"
        android:textColor="#000"
        android:fontFamily="@font/roboto_mono"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="12dp"
            android:text="Audio Quality"
            android:textColor="#000"
            android:fontFamily="@font/roboto_mono"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:text="Set your audio quality to low"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mono"
                android:textSize="16sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginBottom="12dp"
            android:text="Gapless"
            android:textColor="#000"
            android:fontFamily="@font/roboto_mono"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:text="Allow gapless playback"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mono"
                android:textSize="16sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginBottom="12dp"
            android:text="Automix"
            android:textColor="#000"
            android:fontFamily="@font/roboto_mono"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:text="Allow smooth transitions between song in playlist"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mono"
                android:textSize="16sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginBottom="12dp"
            android:text="Normalize Volume"
            android:textColor="#000"
            android:fontFamily="@font/roboto_mono"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:text="Set your same volume level for all tracks"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mono"
                android:textSize="16sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginBottom="12dp"
            android:text="Autoplay"
            android:textColor="#000"
            android:fontFamily="@font/roboto_mono"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:text="Keep on listening to similar tracks when your music end"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mono"
                android:textSize="16sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnLogout"
            android:textColor="#FFF"
            android:fontFamily="@font/roboto_mono"
            android:textAllCaps="false"
            android:padding="10dp"
            android:background="@drawable/bg_button"
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>