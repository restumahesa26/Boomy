<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.auth.signup.SignupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono"
            android:text="REGISTER"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono"
            android:text="Full Name"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_search"
            android:fontFamily="@font/roboto_mono"
            android:hint="Full Name"
            android:padding="12dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono"
            android:text="Email or Username"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_search"
            android:fontFamily="@font/roboto_mono"
            android:hint="Username"
            android:padding="12dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Password"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_search"
            android:fontFamily="@font/roboto_mono"
            android:hint="Password"
            android:padding="12dp"
            android:password="true"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Confirmation Password"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_search"
            android:fontFamily="@font/roboto_mono"
            android:hint="Confirmation Password"
            android:padding="12dp"
            android:password="true"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="44dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/roboto_mono"
            android:padding="10dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/btnHaveRegister"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginTop="12dp"
            android:text="I have registered"
            android:textColor="#000"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>